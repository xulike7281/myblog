extends ../layout

append css
    link(rel='stylesheet', href='/components/font-awesome-4.7.0/css/font-awesome.css')
    link(rel='stylesheet', href='/css/blog.css')
block main
    block header
        nav#nav.navbar.navbar-inverse
            .container-fluid
                // Brand and toggle get grouped for better mobile display
                .navbar-header
                    button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#bs-example-navbar-collapse-1", aria-expanded="false")
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    span.icon_blog.glyphicon.glyphicon-sound-dolby
                    a.navbar-brand(href="#") 徐伟的博客
                // Collect the nav links, forms, and other content for toggling
                #bs-example-navbar-collapse-1.collapse.navbar-collapse
                    ul.nav.navbar-nav
                        if pageName ==="/"
                            li.active
                                a(href="/") 首页
                                    span.sr-only (current)
                        else
                            li
                                a(href="/") 首页
                                    span.sr-only (current)
                        if pageName ==="/user"
                            li.active
                                a(href="dynamic") 个人动态
                        else
                            li
                                a(href="dynamic") 个人动态
                        if pageName ==="/share"
                            li.active
                                a(href="/share") 技术分享
                        else
                            li
                                a(href="/share") 技术分享
                    ul.nav.navbar-nav.navbar-right
                        if  pageName ==="/about"
                            li.active
                                a(href="/about") 关于我
                        else
                            li
                                a(href="/about") 关于我
                        if pageName ==="/admin"
                            li.active
                                a(href="/admin") 管理
                        else
                            li
                                a(href="/admin") 管理
                        if  pageName ==="/contact"
                            li.active
                                a(href="/contact") 联系
                        else
                            li
                                a(href="/contact") 联系


    .container
        .row
            .col-sm-8.blog-main
                block content
                    h1 关于我

    block footer
        footer.blog-footer
            p
                | 联系邮箱：
                a(href="mailto:xuwei7281@163.com")
                    span.social.fa.fa-envelope-o
                    | xuwei7281@163.com